using System;
using System.Collections.Generic;
using System.Linq;

class Program
{
    static int[] denominations = { 1000, 500, 200, 100, 50, 20, 10, 5, 1 };
    static int[] coins = { 25, 10, 5 }; // centavos

    static void Main()
    {
        Console.Write("Enter amount due: ");
        decimal due = Convert.ToDecimal(Console.ReadLine());

        Console.Write("Enter amount paid: ");
        decimal paid = Convert.ToDecimal(Console.ReadLine());

        if (paid < due)
        {
            Console.WriteLine("Insufficient payment!");
            return;
        }

        decimal change = paid - due;
        if (change == 0)
        {
            Console.WriteLine("Exact payment—no change");
            return;
        }

        Console.WriteLine($"Change: {change:F2}");
        int[] breakdown = MakeChange(change);

        Console.WriteLine("\nDenomination\tCount");
        int totalPieces = 0;
        for (int i = 0; i < denominations.Length; i++)
        {
            if (breakdown[i] > 0)
            {
                Console.WriteLine($"₱{denominations[i]}\t\t{breakdown[i]}");
                totalPieces += breakdown[i];
            }
        }

        for (int i = 0; i < coins.Length; i++)
        {
            if (breakdown[denominations.Length + i] > 0)
            {
                Console.WriteLine($"{coins[i]}c\t\t{breakdown[denominations.Length + i]}");
                totalPieces += breakdown[denominations.Length + i];
            }
        }

        Console.WriteLine($"Total Pieces: {totalPieces}");
    }

    static int[] MakeChange(decimal change)
    {
        int totalCents = (int)Math.Round(change * 100);
        int[] result = new int[denominations.Length + coins.Length];

        for (int i = 0; i < denominations.Length; i++)
        {
            int denomValue = denominations[i] * 100;
            result[i] = totalCents / denomValue;
            totalCents %= denomValue;
        }

        for (int i = 0; i < coins.Length; i++)
        {
            result[denominations.Length + i] = totalCents / coins[i];
            totalCents %= coins[i];
        }

        return result;
    }
}
